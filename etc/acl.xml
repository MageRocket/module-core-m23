<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="MageRocket_Core::menu" title="MageRocket Extensions" sortOrder="50">
                    <resource id="MageRocket_Core::documentation" title="Documentations" sortOrder="50">
                        <resource id="MageRocket_Core::guides" title="User Guides" sortOrder="50"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="MageRocket_Core::configuration" title="MageRocket Information" sortOrder="10"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
